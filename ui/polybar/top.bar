[bar/topbar]
bottom = false
width = 100%
height = 18
fixed-center = true
background = ${colors.bg}
border-top-size = 5
border-right-size = 5
border-left-size = 5
border-bottom-size = 5
border-color = ${colors.black2}

line-size = 2

font-0 = "Source Code Pro:pixelsize=11;1"
font-1 = TerminessTTF Nerd Font Mono:pixelsize=16:antialias=true;4
font-2 = unifont:fontformat=truetype:size=8:antialias=true;0 ;BARS
font-3 = "Noto Sans CJK JP:size=7:antialias=false;2"
font-4 = Wuncon Siji:pixelsize=8:antialias=false;2

modules-left = lock
modules-center = i32
modules-right = powermenu


[module/lock]
type = custom/script
exec = echo "[üîí]"
interval = 1
format = <label>
click-left = /usr/bin/i3lock-fancy

format-prefix = %{B#0c977f F#0f2536}ÓÇº%{B- F-}%{B#0c977f F#b9fafc}%{B- F-}%{B#0c977f F#0f2536}%{B- F-}
format-suffix = %{B#148A76 F#0f2536}ÓÇ∫%{B- F-}
label-foreground = ${colors.fg}
label-background = ${colors.cyan1}


[module/powermenu]
type = custom/menu
expand-right = true
#format-spacing = 1
#format-underline = #1db954

format-prefix = %{B#0fbda0 F#0f2536}ÓÇ∏%{B- F-}%{B#0fbda0 F#0f2536}ÓÇ™%{B- F-}%{B#148A76 F#0fbda0}ÓÇ∏%{B- F-}
