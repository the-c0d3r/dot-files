menu-2-0 = power off
menu-2-0-exec = poweroff
#menu-2-1 = cancel
#menu-2-1-exec = menu-open-0


[module/i32]
type = internal/i3
pin-workspaces = true
index-sort = true
enable-click = true
enable-scroll = true
wrapping-scroll = true
reverse-scroll = true
#‰∏Ä ‰∫å ‰∏â Âõõ ‰∫î ÂÖ≠ ‰∏É ÂÖ´ ‰πù ÂçÅ

