# file related aliases
alias todo="vi ~/programming/todo.md"

# System Aliases
alias vi="nvim"
alias vim="nvim"
alias ll="ls -alFr --color=auto"
alias l="ls -lah --color=auto"
alias lsh="ls -d .* --color=auto"
alias lsd="ls -ld */ --color=auto"
alias la="ls -A --color=auto"

# Custom stuff
alias fzf="fzf --preview 'head -n 100 {}'"
alias vif="vi \$(fzf)"

# Custom tools
alias weather="curl http://wttr.in/singapore"

# Tmux Aliases
alias tmls="tmux ls"
alias tmat="tmux attach -t"
alias tmns="tmux new -s"
