# file related aliases
alias todo="vi ~/todo.md"

# System Aliases
alias vi="nvim"
alias vim="nvim"
alias ll="ls -alFr"
alias l="ls -lah"
alias lsh="ls -d .*"
alias lsd="ls -ld */"
alias la="ls -A"

# Custom stuff
alias fzf="fzf --preview 'head -n 100 {}'"
alias vif="vi \$(fzf)"

# Custom tools
alias weather="curl http://wttr.in/singapore"

# Tmux Aliases
alias tmls="tmux ls"
alias tmat="tmux attach -t"
alias tmns="tmux new -s"
